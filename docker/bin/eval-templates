#!/bin/bash -eu

export DOLLAR=$

files=( '/etc/pyramid_oereb/config.yaml.tmpl' 'production.ini.tmpl' )

for file in "${files[@]}"
do
    echo "Evaluate: ${file}"
    envsubst < ${file} > ${file%.tmpl}
    if [ `id -u` == 0 ]
    then
        chmod --reference=${file} ${file%.tmpl}
        chown --reference=${file} ${file%.tmpl}
    fi
done

exec "$@"